---
interface Props {
  id: string;
  name: string;
  img: string;
  success: boolean | null;
  flightNumber: number;
  details: string | null;
}

const { id, name, img, success, flightNumber, details } = Astro.props;

const successText = success ? "Ã‰xito" : "Fracaso";
const detailsText =
  details !== null && details?.length < 100
    ? details
    : details === null
      ? "Espacio en blanco: Sin detalles disponibles."
      : details?.slice(0, 100) + "...";
---

<a href={`./launches/${id}`} class="w-full rounded-lg border shadow-md bg-white-700 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border.gray-500 transition flex flex-col">
  
    <img
      class="p-8 rounded-t-lg"
      src={img}
      alt=`Emblema del lanzamiento ${id}`
    />
    <div class="px-5 pb-5">
      <p class="font-normal text-gray-400 text-md">
        Odisea #{flightNumber}
        <span
          class:list={[
            `text-xs px-2 py-1 mt-3.5 mr-2 rounded float-right font-semibold text-white tracking-widest uppercase`,
            {
              "bg-green-500": success,
              "bg-red-500": !success,
            },
          ]}
        >
          {successText}
        </span>
      </p>
      <h5
        class="text-xl font-semibold tracking-tight text-white"
      >
        {name}
      </h5>
      <p class="mt-1 font-normal text-gray-400 text-sm">{detailsText}</p>
    </div>
</a>
