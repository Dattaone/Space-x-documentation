---
import Imagin from "../../public/Imagin.astro";
import HeaderButton from "./HeaderButton.astro";

interface Props {
    title: string
}
const { title } = Astro.props;

---

<header class="px-4 py-5 pb-3 mx-auto bg-gray-800 flex justify-between">
  <div class="flex flex-grow basis-0 px-2.5 py-0.5">
    <a href="./" class="flex">
        <Imagin />
        <h1 class="text-white px-2 py-1 text-xl">{title}</h1>
    </a>
  </div>
  <div>
    <nav >
        <ul class="flex justify-between text-white">
            <HeaderButton href="./">Principal</HeaderButton>
            <HeaderButton href="./about">Sobre</HeaderButton>
            <HeaderButton href="./about">Sobre</HeaderButton>
        </ul>
    </nav>
  </div>
</header>
