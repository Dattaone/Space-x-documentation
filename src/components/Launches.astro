---
import { getLaunches } from "../services/spacex.ts";
import CardLaunch from "./CardLaunch.astro";

const launches = await getLaunches();
---

<div
  class="conteiner px-8 py-20 grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
>
  {
    launches.map((launch) => {
      const imagen = launch.links.patch.small + "";
      return (
        <CardLaunch 
            id={launch.id} 
            name={launch.name} 
            img={imagen} 
            success={launch.success} 
            flightNumber={launch.flight_number}
            details={launch.details}
        />
      );
    })
  }
</div>
