import Flecha from "../../public/Flecha.astro";
import LayoutPage from "../layouts/LayoutPage.astro";
import Launches from "../components/Launches.astro";

import Paginacion from "./paginacion.astro";
---

<LayoutPage title={SITE_TITLE} , description={SITE_DESCRIPTION}>
  <div class="w-full text-center py-20 bg-gray-800 bg-opacity-50">
    <h1
      class="mb-4 pb-3 text-4xl font-bold leading-none tracking-tight text-white md:text-5xl lg:text-6xl"
    >
      Lanzamientos de SpaceX ðŸš€
    </h1>
    <p
